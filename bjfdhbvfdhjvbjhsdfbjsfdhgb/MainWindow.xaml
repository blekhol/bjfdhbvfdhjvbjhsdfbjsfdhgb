<Window x:Class="bjfdhbvfdhjvbjhsdfbjsfdhgb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bjfdhbvfdhjvbjhsdfbjsfdhgb"
		xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

	<Canvas x:Name="canvas">
		<Canvas.Background>
			<ImageBrush ImageSource="a.png" Stretch="UniformToFill"/>
		</Canvas.Background>


		<Ellipse x:Name="madar" Height="28" Canvas.Left="111" Stroke="Black" Canvas.Top="155" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#FFFFDE00"/>
		<Image x:Name="kod" Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="450" Width="1098" Visibility="Hidden">
			<Image.Source>
				<BitmapImage UriSource="asd.png"/>
			</Image.Source>
		</Image>

		<Image x:Name="eso" gif:ImageBehavior.AnimatedSource="eso.gif" Height="688" Width="1084" Canvas.Left="-87" Canvas.Top="-84" Visibility="Hidden" />

        <Grid x:Name="startMenu" Background="#AA000000" Width="400" Height="250" Canvas.Left="200" Canvas.Top="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Flappy Bird" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
                <Button Content="Sima" Width="120" Height="40" Click="RegularButton_Click"/>
                <Button Content="Ködös" Width="120" Height="40" Click="FogButton_Click"/>
                <Button Content="Esős" Width="120" Height="40" Click="RainButton_Click"/>
            </StackPanel>
        </Grid>
    </Canvas>
</Window>
